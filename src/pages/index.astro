---
import { getCollection, getEntry } from "astro:content";

import Layout from "../layouts/HomeLayout.astro";
import Quote from "../components/widgets/Quote.astro";
import BentoGrid from "../components/widgets/BentoGrid.astro";
import Collaborations from "../components/widgets/Collaborations.astro";
import Hero from "../components/widgets/Hero.astro";
import List from "../components/widgets/List.astro";

const solutions = await getCollection("solutions");
const advantages = await getCollection("advantages");
const collaborations = await getCollection("collaborations");

const heroSection = await getEntry("sections", "hero");
const ctaSection = await getEntry("sections", "cta");
---

<Layout>
  <Hero title={heroSection?.data.title} subtitle={heroSection?.data.subtitle} />
  <Quote title={ctaSection?.data.title} subtitle={ctaSection?.data.subtitle} />
  <BentoGrid list={solutions} />
  <List list={advantages} />
  <Collaborations collaborations={collaborations} />
</Layout>
