---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import logo from "../../assets/identity/logo.webp";
---

<footer class="bg-black text-white py-10">
  <div class="flex items-center justify-between px-10 max-w-7xl mx-auto">
    <div class="flex flex-col items-center gap-3">
      <Image src={logo} alt="kanzo.tech logo" class="w-48" />
      <div>
        <a href="https://github.com/kanzo-tech" target="_blank">
          <Icon name="ph:github-logo" class="w-6 h-6" />
        </a>
      </div>
    </div>

    <div></div>
  </div>
</footer>
