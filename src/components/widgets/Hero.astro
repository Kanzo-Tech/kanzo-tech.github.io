---
import { Image } from "astro:assets";

import PrimaryButton from "../common/PrimaryButton.astro";
import hero from "../../assets/images/hero.svg";

const { title, subtitle } = Astro.props;
---

<section class="flex flex-col items-center justify-center h-[75vh] xl:h-screen">
  <div class="absolute inset-0">
    <Image
      src={hero}
      alt="Park foreground"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="absolute max-w-5xl">
    <div class="flex flex-col items-center gap-6 text-center">
      <h1 class="text-4xl md:text-7xl font-bold">{title}</h1>
      <p class="text-lg md:text-xl max-w-2xl mb-4">{subtitle}</p>
      <PrimaryButton href="/contact" text="Contact us" />
    </div>
  </div>
</section>
