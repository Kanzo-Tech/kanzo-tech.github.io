---
import { Image } from "astro:assets";
import Card from "../common/Card.astro";

const { index, item } = Astro.props;
---

<li
  id={Astro.props.id}
  class:list={["grid md:grid-cols-2 items-center gap-6", Astro.props.class]}
>
  <Card class={index % 2 === 0 ? "order-first" : "order-last"}>
    <Image
      src={item.data.image}
      alt={item.data.title}
      class="w-full h-full object-cover rounded-lg"
    />
  </Card>

  <div class="flex flex-col items-start gap-4">
    <h3 class="text-4xl">{item.data.title}</h3>
    <p class="text-lg">{item.data.text}</p>
  </div>
</li>
